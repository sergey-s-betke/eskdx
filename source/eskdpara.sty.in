m4_ESKDX_INIT
m4_FILE_INIT
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{eskdpara}[m4_dnl
m4_FILE_ID([[$Date::                            $]]) Paragraphs]

\RequirePackage{eskdsect}

\newcommand{\ESKDparagraphAlign}{\ESKDsectAlignLeft}
\newcommand{\ESKDsubparagraphAlign}{\ESKDsectAlignLeft}

\newcommand{\ESKDparagraphStyle}{\normalfont\normalsize\bfseries}
\newcommand{\ESKDsubparagraphStyle}{\normalfont\normalsize\bfseries}

\newlength{\ESKDparagraphSkipBefore}
\newlength{\ESKDparagraphSkipAfter} 
\setlength{\ESKDparagraphSkipBefore}{-15mm \@plus -3mm \@minus -2mm}
\setlength{\ESKDparagraphSkipAfter}{15mm \@plus 1mm \@minus 2mm}
\newlength{\ESKDsubparagraphSkipBefore}
\newlength{\ESKDsubparagraphSkipAfter}
\setlength{\ESKDsubparagraphSkipBefore}{-15mm \@plus -3mm \@minus -2mm}
\setlength{\ESKDsubparagraphSkipAfter}{15mm \@plus 1mm \@minus 2mm}

\renewcommand\paragraph{\@startsection{paragraph}{4}{\parindent}%
                                     {\ESKDparagraphSkipBefore}%
                                     {\ESKDparagraphSkipAfter}%
                                     {\ESKDparagraphAlign\ESKDparagraphStyle}}
\renewcommand\subparagraph{\@startsection{subparagraph}{5}{\parindent}%
                                     {\ESKDsubparagraphSkipBefore}%
                                     {\ESKDsubparagraphSkipAfter}%
                                     {\ESKDsubparagraphAlign\ESKDsubparagraphStyle}}

