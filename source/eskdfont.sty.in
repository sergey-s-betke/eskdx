m4_ESKDX_INIT
m4_FILE_INIT
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{eskdfont}[m4_dnl
m4_FILE_ID([[$Date::                            $]]) Font Definitions]

\newcommand{\ESKDfontBaseLineStretch}{1}

\newcommand{\ESKDfontSetBaseLineStretch}{%
  \renewcommand{\baselinestretch}{\ESKDfontBaseLineStretch}}

\newcommand{\ESKDfontShape}{\slshape}

\newcommand{\ESKDfontIIsize}{\fontsize{8pt}{10pt}}
\newcommand{\ESKDfontIIIsize}{\fontsize{10pt}{12pt}}
\newcommand{\ESKDfontVsize}{\fontsize{16pt}{18pt}}
\newcommand{\ESKDfontVIIsize}{\fontsize{20pt}{23pt}}
\newcommand{\ESKDfontXsize}{\fontsize{32pt}{38pt}}

\newcommand{\ESKDfontII}{%
  \ESKDfontSetBaseLineStretch
  \ESKDfontIIsize\selectfont\ESKDfontShape}
\newcommand{\ESKDfontIII}{%
  \ESKDfontSetBaseLineStretch
  \ESKDfontIIIsize\selectfont\ESKDfontShape}
\newcommand{\ESKDfontV}{%
  \ESKDfontSetBaseLineStretch
  \ESKDfontVsize\selectfont\ESKDfontShape}
\newcommand{\ESKDfontVII}{%
  \ESKDfontSetBaseLineStretch
  \ESKDfontVIIsize\selectfont\ESKDfontShape}
\newcommand{\ESKDfontX}{%
  \ESKDfontSetBaseLineStretch
  \ESKDfontXsize\selectfont\ESKDfontShape}

\newcommand{\ESKDfontTabHead}{\ESKDfontIII}
\newcommand{\ESKDfontTabBody}{\ESKDfontIII}

m4_dnl vim:ft=tex:sw=2:ai
